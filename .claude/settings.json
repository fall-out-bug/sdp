{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "auto",
  "hooks": {
    "PostToolUse": {
      "Bash": {
        "pattern": "git commit.*",
        "command": "echo 'âœ… Commit complete, syncing Beads...' && bd sync || true"
      }
    }
  },
  "skills": {
    "verify-workstream": {
      "enabled": true,
      "autoRunBeforeBuild": true
    },
    "reality-check": {
      "enabled": true,
      "autoRunBeforeEdit": false
    }
  },
  "beads": {
    "enabled": true,
    "autoSync": true,
    "mappingFile": ".beads-sdp-mapping.jsonl"
  }
}

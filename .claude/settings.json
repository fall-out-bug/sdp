{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "auto",
  "skills": {
    "verify-workstream": {
      "enabled": true,
      "autoRunBeforeBuild": true
    },
    "reality-check": {
      "enabled": true,
      "autoRunBeforeEdit": false
    }
  },
  "beads": {
    "enabled": true,
    "autoSync": true,
    "mappingFile": ".beads-sdp-mapping.jsonl"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/PreToolUse.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/PostToolUseWorkflowCheck.sh"
          }
        ]
      }
    ]
  }
}

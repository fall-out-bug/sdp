{
  "hooks": {
    "afterEdit": [
      "echo '‚úÖ File edited, running quality gates...'",
      "pytest tests/ --quiet --tb=no || echo '‚ö†Ô∏è Tests failed, fix before committing'"
    ],
    "beforeCommit": [
      "echo 'üîç Pre-commit checks...' &&",
      "pytest tests/ --quiet --tb=no",
      "python -m mypy src/ --strict",
      "ruff check src/",
      "python scripts/check_consistency.py || echo '‚ö†Ô∏è Documentation drift detected'"
    ],
    "afterCommit": [
      "git status",
      "echo '‚úÖ Commit complete, syncing Beads...' &&",
      "bd sync || true"
    ]
  },
  "skills": {
    "verify-workstream": {
      "enabled": true,
      "autoRunBeforeBuild": true
    },
    "reality-check": {
      "enabled": true,
      "autoRunBeforeEdit": false
    }
  },
  "beads": {
    "enabled": true,
    "autoSync": true,
    "mappingFile": ".beads-sdp-mapping.jsonl"
  }
}
